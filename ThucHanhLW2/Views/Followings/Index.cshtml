@model IEnumerable<ThucHanhLW2.Models.Following>

@{
    ViewBag.Title = "Đang theo dõi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Đang theo dõi</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Followee.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Follower.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Followee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Follower.Name)
            </td>
            <td>
                @Html.ActionLink("Hủy theo dõi", "Delete", new { id=item.FolloweeId })
            </td>
        </tr>
    }

</table>
